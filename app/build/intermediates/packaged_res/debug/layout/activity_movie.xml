<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main"
    tools:context=".movie.MovieActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/toolbar_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:menu="@menu/up_menu"
                    app:navigationIcon="@drawable/arrow"
                    app:title="The Magicians"
                    app:titleTextColor="@color/white" />
            </com.google.android.material.appbar.AppBarLayout>


            <ImageView
                android:id="@+id/img_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar_id"
                android:src="@drawable/img_up" />

            <TextView
                android:id="@+id/tv_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Смотреть"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:padding="15sp"
                android:textStyle="bold"
                android:layout_below="@id/img_movie" />

            <VideoView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/tv_look" />

            <TextView
                android:id="@+id/tv_opis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video"
                android:padding="15sp"
                android:text="Описание"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_opis_many"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_opis"
                android:padding="15sp"
                android:text="smth"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_kadr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кадры"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:padding="15sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_opis_many" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kadr" />

            <TextView
                android:id="@+id/tv_epiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Эпизоды"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:padding="15sp"
                android:textStyle="bold"
                android:layout_below="@id/rv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_epiz" />
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>